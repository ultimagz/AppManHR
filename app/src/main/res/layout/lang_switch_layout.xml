<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/lang_btn_group"
        android:layout_width="84dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:background="@drawable/red_outline"
        android:checkedButton="@+id/en_btn"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/en_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/switch_bg_selector"
            android:button="@null"
            android:gravity="center"
            android:text="EN"
            android:textColor="@color/switch_text_selector" />

        <RadioButton
            android:id="@+id/th_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/switch_bg_selector"
            android:button="@null"
            android:gravity="center"
            android:text="TH"
            android:textColor="@color/switch_text_selector" />
    </RadioGroup>
</RelativeLayout>