<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.ContactsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/side_index"
            android:layout_width="@dimen/side_index_width"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@android:color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp"/>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/side_index">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/contact_list"
                android:transitionName="contactList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shadow_bottom_view_contact"
                android:overScrollMode="never"
                android:scrollbars="none"/>
        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>
</layout>